<Page x:Class="Jarvis.ProjectJarvis.Views.Pages.SidePanel.Profile.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Jarvis" Width="965" Height="700" >

    <Page.Content>
        <Grid x:Name="RegistrationGrid" >
            <StackPanel Margin="15,20,15,20">
                <Label Content="Добро пожаловать" HorizontalAlignment="Center"/>
                <Label Content="Ваш логин:" FontSize="16" HorizontalAlignment="Center" Foreground="Azure"/>
                <TextBox BorderBrush="Azure" Width="200" FontSize="16" HorizontalAlignment="Center" Name="LoginBox"/>
                <Label Content="Ваш пароль:" FontSize="16" HorizontalAlignment="Center" Foreground="Azure"/>
                <TextBox BorderBrush="Azure" Width="200" FontSize="16" HorizontalAlignment="Center" Name="PassBox"/>
                <Button Width="200" Name="RegistrationButton" Click="RegistrationButton_Click">Регистрация</Button>
            </StackPanel>
        </Grid>
    </Page.Content>
</Page>