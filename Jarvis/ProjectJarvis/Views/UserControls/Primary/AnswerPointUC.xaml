<UserControl x:Class="Jarvis.ProjectJarvis.Views.UserControls.Primary.AnswerPointUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Content>
        <StackPanel Orientation="Horizontal">
            <Ellipse Width="14" Height="14" Margin="0,0,10,0" Fill="{Binding Color}" />
            <TextBlock Text="{Binding Message}" Foreground="{DynamicResource Color.White}"
                       FontFamily="{DynamicResource Font.SegoeUIVF}" FontSize="14" />
        </StackPanel>
    </UserControl.Content>
</UserControl>